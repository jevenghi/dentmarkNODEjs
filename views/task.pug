extends base

block styles
  link(rel="stylesheet" href="/css/style.css")
block content
  header.header
      button.nav__el.nav__el--myacc
        img(src="../user.png", alt="AccIcon")
  div.modal.hidden
    div.modal__content
      a.modal__link(href="/me") My profile
      a.modal__link(href="/") Send new task
      a.modal__link(href="/tasks") My tasks
      a.modal__link.logout(href="#") Log out
  .main-container
    // Render other task details as needed
    .task-header
      p Customer: #{customer}
      p Model: #{model}
      p Task created: #{date}
    != dentsHTML
    table.task-table
        thead
          tr
            th Dent number
            th Task Status
            th Cost
        tbody
          each dent in dents
            tr
              td= dent.markerNumber
              td
                select(name="status", class="dent-status-select", value=dent.status)
                  option(value="open") Open
                  option(value="in-progress") In Progress
                  option(value="complete") Complete
              td â‚¬  
                input(type="text", value=dent.cost, name="cost", class='dent-cost')
    button(type="button" class='save-dent-changes') Save changes           
  .overlay.hidden
            